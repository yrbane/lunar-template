{
    "name": "yrbane/lunar-template",
    "description": "Standalone advanced template engine with inheritance, blocks, macros and caching",
    "version": "1.4.0",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../lunar-cli"
        }
    ],
    "keywords": ["template", "engine", "php", "templating", "inheritance", "blocks", "macros"],
    "homepage": "https://github.com/yrbane/lunar-template",
    "authors": [
        {
            "name": "Seb",
            "email": "seb@nethttp.net",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Lunar\\Template\\": "src/"
        }
    },
    "require": {
        "php": ">=8.3",
        "ext-mbstring": "*",
        "yrbane/lunar-cli": "@dev"
    },
    "bin": [
        "bin/lunar-template"
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.91",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Lunar\\Template\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-opcache": "For better performance with compiled templates",
        "ext-pcov": "For fast code coverage analysis"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit --testsuite=All",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage/html --coverage-text",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "analyse": "phpstan analyse src tests --level=7",
        "qa": [
            "@cs:check",
            "@analyse",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all tests",
        "test:unit": "Run unit tests only",
        "test:integration": "Run integration tests only",
        "coverage": "Run tests with code coverage report",
        "cs:check": "Check code style without fixing",
        "cs:fix": "Fix code style issues",
        "analyse": "Run static analysis with PHPStan",
        "qa": "Run all quality assurance checks"
    }
}
